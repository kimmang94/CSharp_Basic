        public void Move()
        {
            Console.WriteLine("Player Move");
        }

        public void Attack()
        {
            Console.WriteLine("Player Attack");
        }
    }

    class Mage
    {
      
    }

    class Archer
    {
        
    }


    class Knight : Player
    {
        public void Stun()
        {

        }

     
    }

        
       
       
     
    class textfight1
    { 
        static void Main(string[] args)
        {
            Knight knight = new Knight();
            knight.Move();
