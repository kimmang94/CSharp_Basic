using System;
using System.Collections.Generic;

namespace Array
{
    
    class Program
    {
        //객체 지향 -> 은닉성
        //불필요한 정보 외부노출 x
        class Knight
        {
            protected int hp;

            public int GetHp () { return hp; }
            public void SetHp(int hp) { this.hp = hp; }
        }

        static void Main(string[] args)
        {
            //프로퍼티
            Knight knight = new Knight();
            knight.SetHp(100);
        }
    }
}
