using System;

namespace textfight1
{
    // 객체 (OOP Object Oriented Programming)
    // 속성
    // 기능
    // Knight
    // 속성 : hp, attack
    // 기능 : Move, Attack, Die

    //참조
    class Knight
    {
        public int hp;
        public int attack;

        //생성자
        public Knight()
        {
            hp = 100;
            attack = 10;
            Console.WriteLine("생성자 호출");
        }

        //인자사용

        public Knight(int hp) // : this() 내자신의 빈생성자 호
        {
            this.hp = hp;
            Console.WriteLine("int 생성자 호출");
        }

        public Knight(int hp, int attack) : this()
        {
            this.hp = hp;
            this.attack = attack;
            Console.WriteLine("int hp, int attack 생성자 호출");
        }

        public void Move()
        {
            Console.WriteLine("Knaight Move");
        }

        public void Attack()
        {
            Console.WriteLine("Knight Attack");
        }
    
    }

    //복사
    struct Mage
    {
        public int hp;
        public int Attack;
    }
     
    class textfight1
    { 
        static void Main(string[] args)
        {
            Knight knight = new Knight();
            Knight knight1 = new Knight(10);
            Knight knight2 = new Knight(10, 5);


        }
    }
}
